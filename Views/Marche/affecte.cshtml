@model IEnumerable<aplication20_07_2019.Models.viewmodel.ParticipationRequest>

@{
    ViewBag.Title = "affecte";
    Layout = "~/Views/Shared/_Layoutresponsablemarche.cshtml";
}



@*@using (Html.BeginForm("affecte", "Marche", FormMethod.Post))*@
<form action="#"  method="post">    

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card " style="width: 40rem;">
                @if(item.prestataire_participant.image_prestataire!=null)
                            { 
                            <img  class="img-thumbnail center-block"src="@String.Format("data:image/png;base64,{0}",Convert.ToBase64String(item.prestataire_participant.image_prestataire))" width="150" height="50" />
                             }
                <div class="card-body ">
                    <dl class="dl-horizontal">
                        <dt>
                            Nom prestataire:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => item.prestataire_participant.libelle)
                        </dd>
                        <dt>
                            Raison sociale:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => item.prestataire_participant.raison_social)
                        </dd>

                        <dt>
                            Budget prestation:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => item.budget_prestation)
                        </dd>

                    </dl>
                    <table class="table">
                        <tr>
                            <th>
                                Profil
                            </th>
                            <th>
                                Cout
                            </th>

                        </tr>

                        @foreach (var item1 in item.listeprofil_cout)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item1.libelle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item1.cout)
                                </td>


                            </tr>
                        }

                    </table>
                    <div class="text-center">
                    <a action="post" href='@string.Format("/Marche/affect?id_prestatire={0}&id_marche={1}", item.prestataire_participant.id_prestataire ,(int)ViewBag.id_marche ) '  class="btn btn-info "> <i class="glyphicon glyphicon-ok-circle"></i></a>
                    </div>
                </div>
            </div>


        }

    </div>
</form>