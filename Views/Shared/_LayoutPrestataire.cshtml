<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Oncf-Market</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <style>

        #information_projet {
            position: absolute;
            top: 75px;
            right: 25px;
        }

        html, body {
            margin: 0px;
            padding: 0px;
        }

        * {
            margin: 0px;
            padding: 0;
            font-family: sans-serif;
        }

        #changeback {
            color: white;
            height: 40px;
            position: fixed;

            bottom: 0%;
            width: 100%;
            background-color: #151719;
            opacity: 1;
        }
        #marge{
        height: 40px;
        }
        #sidebar {
            position: fixed;
            width: 25%;
            height: 100%;
            background: #151719;
            left: 0%;
            transition: all 500ms linear;
            position: absolute;
            z-index: 1000;
        }

            #sidebar.active {
                left: 0px;
            }

            #sidebar ul li {
                color: White;
                list-style: none;
                padding: 15px 10px;
                border-bottom: 1px solid rgba(100,100,100,0.3);
            }

            #sidebar .toggle-btn {
                position: absolute;
                Left: 400px;
                top: 20px;
            }

                #sidebar .toggle-btn span {
                    display: block;
                    width: 30px;
                    height: 5px;
                    background: #151719;
                    margin: 5px 0px;
                }
        .foo
        {margin-right: 5px;
        }
                
    </style>


    <nav>
        <div class="navbar navbar-inverse nav-tabs  ">
            <div class="container-fluid">
                <ul class="nav navbar-nav">
                    <li><a href="~/MainPrestataire"><img class="foo" src="~/Views/img/Logo-oncf.png" height="30" width="120" /></a></li>
                    <li><a href="~/Prestataire/Information_prstataire"><img class="foo" src="~/Views/img/user.png" height="30" width="30" /> Votre profil</a></li>
                    
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#"><img src="~/Views/img/enterprise.png" height="30" width="30"/>Marche <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Marche/MarchePropose"><img class="foo" src="~/Views/img/business-and-finance.png" height="30" width="30" />propose</a></li>
                            <li><a href="/Marche/MarcheENAttent"><img src="~/Views/img/en_attent.png" />En attent de validation</a></li>
                            <li><a href="/Marche/Marcheencour"><img class="foo" src="~/Views/img/refresh.png" height="30" width="30" />en cours</a></li>
                            <li><a href="/Marche/MarcheHistorique"> <img class="foo" src="~/Views/img/history.png" height="30" width="30" />historique</a></li>

                        </ul>
                    </li>
                    <li><a href="~/Home/Contact"><img class="foo" src="~/Views/img/conversation.png" height="30" width="30"/>Contact</a></li>
                    <li><a href="~/Home/About"><img class="foo" src="~/Views/img/information.png" height="30" width="30" />A propos</a></li>
                </ul>

                
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>







    <div class="container body-content">
        @RenderBody()


    </div>
    <div id="marge">

    </div>
    <footer class="page-footer font-small blue pt-4 " id="changeback">
        <div class=" text-center  py-3">

            oncf Market
        </div>
        <!-- Copyright -->

    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
