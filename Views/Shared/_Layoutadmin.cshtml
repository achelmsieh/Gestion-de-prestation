<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Oncf-Market</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <style>

        #information_projet {
            position: absolute;
            top: 75px;
            right: 25px;
        }

        html, body {
            margin: 0px;
            padding: 0px;
        }

        * {
            margin: 0px;
            padding: 0;
            font-family: sans-serif;
        }

        #changeback {
            color: white;
            height: 40px;
            position: fixed;
            bottom: 0%;
            width: 100%;
            background-color: #151719;
            opacity: 1;
        }

        #sidebar {
            position: fixed;
            width: 25%;
            height: 100%;
            background: #151719;
            left: 0%;
            transition: all 500ms linear;
            position: absolute;
            z-index: 1000;
        }

            #sidebar.active {
                left: 0px;
            }

            #sidebar ul li {
                color: White;
                list-style: none;
                padding: 15px 10px;
                border-bottom: 1px solid rgba(100,100,100,0.3);
            }

            #sidebar .toggle-btn {
                position: absolute;
                Left: 400px;
                top: 20px;
            }

                #sidebar .toggle-btn span {
                    display: block;
                    width: 30px;
                    height: 5px;
                    background: #151719;
                    margin: 5px 0px;
                }
    </style>


    <nav>
        <div class="navbar navbar-inverse nav-tabs  ">
            <div class="container-fluid">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Creer un utilisateur", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                    
                    <li><a href="~/Prestataire">prestataire</a></li>


                </ul>

                
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>







    <div class="container body-content">
        @RenderBody()


    </div>
    <footer class="page-footer font-small blue pt-4 " id="changeback">
        <div class=" text-center  py-3">

            oncf Market
        </div>
        <!-- Copyright -->

    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
